{
    "version": 2,
    "name": "vercel_build_staticfiles",
    "builds": [
        {
        "src": "vercel_build_staticfiles.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "staticfiles_build"
          }
        },
        {
            "src": "BetterGlauco/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "30mb"}
        }
    ],
    "routes": [
        {
          "src": "/static/(.*)",
          "dest": "/static/$1"
        },
        {
          "src": "/(.*)",
          "dest": "BetterGlauco/wsgi.py"
        }
      ]
}
